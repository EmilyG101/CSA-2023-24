import java.util.Arrays;
class Main {
  public static void main(String[] args) {
    int[] array = {1,2,3,4};
    System.out.println(evenPercent(array));
  }
public static double evenPercent(int[] arr){
  double count = 0.0;
  if(arr.length == 0){
    return 0.0;
  }
  for(int i = 0; i < arr.length; i++){
    if(arr[i] % 2 == 0){
      count++;
      }
    }
  return (count/arr.length)*100;
  }
}
